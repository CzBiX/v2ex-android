<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#9e9e9e</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme" tools:ignore="NewApi">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView">
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.CardView.Avatar">
    </style>

    <style name="AppTheme.CardView.TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppTheme.CardView.Username" parent="AppTheme.CardView.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.CardView.Time" parent="AppTheme.CardView.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="AppTheme.CardView.Node" parent="AppTheme.CardView.TextView">
        <item name="android:textColor">#4caf50</item>
    </style>

    <style name="AppTheme.CardView.Content" parent="AppTheme.CardView.TextView">
        <item name="android:textColor">#000</item>
    </style>

    <style name="AppTheme.CardView.Count" parent="AppTheme.CardView.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:background">#9e9e9e</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

</resources>
