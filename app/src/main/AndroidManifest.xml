<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.czbix.v2ex" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AppCtx"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.czbix.v2ex.network.GlideConfig"
            android:value="GlideModule" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/master_host"
                    android:pathPrefix="@string/node_url_prefix"
                    android:scheme="@string/scheme_http" />
                <data
                    android:host="@string/master_host"
                    android:pathPrefix="@string/node_url_prefix"
                    android:scheme="@string/scheme_https" />
                <data
                    android:host="@string/www_host"
                    android:pathPrefix="@string/node_url_prefix"
                    android:scheme="@string/scheme_http" />
                <data
                    android:host="@string/www_host"
                    android:pathPrefix="@string/node_url_prefix"
                    android:scheme="@string/scheme_https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".ui.DebugActivity"
            android:label="Debug" >
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings" >
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.TopicActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/master_host"
                    android:pathPrefix="@string/topic_url_prefix"
                    android:scheme="@string/scheme_http" />
                <data
                    android:host="@string/master_host"
                    android:pathPrefix="@string/topic_url_prefix"
                    android:scheme="@string/scheme_https" />
                <data
                    android:host="@string/www_host"
                    android:pathPrefix="@string/topic_url_prefix"
                    android:scheme="@string/scheme_http" />
                <data
                    android:host="@string/www_host"
                    android:pathPrefix="@string/topic_url_prefix"
                    android:scheme="@string/scheme_https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoadingActivity"
            android:label="@string/title_activity_loading"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".ui.SearchActivity"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>

        <!-- start Google Analytics -->
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver android:name="com.google.android.gms.analytics.AnalyticsReceiver"
                  android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.gms.analytics.ANALYTICS_DISPATCH" />
            </intent-filter>
        </receiver>
        <service android:name="com.google.android.gms.analytics.AnalyticsService"
                 android:enabled="true"
                 android:exported="false"/>


        <receiver android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
                  android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />
        <!-- end Google Analytics -->
    </application>
</manifest>
